<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="500.0" minWidth="450.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.baylor.ecs.csi.Controllers.LoadingScreenController">
   <center>
       <VBox maxWidth="200.0" minWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
           </padding>
           <BorderPane.margin>
               <Insets/>
           </BorderPane.margin>
           <Region minHeight="20.0" prefHeight="35.0" prefWidth="179.0"/>
           <Text fill="D8D8D8" strokeType="OUTSIDE" strokeWidth="0.0" text="Ready to convert?" textAlignment="CENTER">
              <font>
                  <Font name="System Bold" size="21.0"/>
              </font>
              <VBox.margin>
                  <Insets top="60.0"/>
              </VBox.margin>
           </Text>
           <Button id="acceptButton" fx:id="acceptButton" alignment="CENTER" contentDisplay="CENTER"
                   mnemonicParsing="false" onAction="#loadingScreenAction" prefHeight="50.0" prefWidth="125.0"
                   text="Yes">
              <VBox.margin>
                  <Insets left="30.0" right="30.0" top="60.0"/>
              </VBox.margin>
           </Button>
           <Hyperlink id="credits" fx:id="credits" alignment="CENTER" contentDisplay="CENTER" minWidth="110.0"
                      onAction="#creditsAction" text="Credits" textAlignment="CENTER" translateX="35.0">
              <VBox.margin>
                  <Insets top="20.0"/>
              </VBox.margin>
              <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
              <font>
                  <Font size="14.0"/>
              </font>
           </Hyperlink>
       </VBox>
   </center>
   <top>
       <HBox id="titleCurrencyConverter" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0"
             BorderPane.alignment="CENTER">
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
           </padding>
           <Text fill="D8D8D8" strokeType="OUTSIDE" strokeWidth="0.0" text="Currency Converter" textAlignment="CENTER">
              <font>
                  <Font name="System Bold" size="32.0"/>
              </font>
              <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
              </HBox.margin>
           </Text>
       </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
